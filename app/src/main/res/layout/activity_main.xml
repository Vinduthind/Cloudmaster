<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cloudtorrent.techxpose.co.cloudtorrent.MainActivity">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true">

    </WebView>


    <ProgressBar
        android:id="@+id/Bar"

        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="155dp"
        android:layout_y="226dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.ads.AdView

        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7426325861660851/3421051725"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/friend_result_button">
    </com.google.android.gms.ads.AdView>




<Button
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:drawableLeft="@mipmap/ic_dns_black_24dp"
    android:layout_margin="10dp"
android:textStyle="italic"
     android:text="Tally"
    android:background="#30AF99"
    android:id="@+id/friend_result_button"

    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" />


</RelativeLayout>


